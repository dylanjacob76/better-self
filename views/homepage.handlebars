{{#each posts }}
<div class="homepage-cards row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a class="post-name" href="/post/{{id}}">{{name}}</a>
    </h2>
    <p class="post-info">Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>{{description}}</p>
  </div>
</div>
{{/each}}